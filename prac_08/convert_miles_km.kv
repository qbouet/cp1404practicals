BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            size_hint_x: 0.8
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()
    Label:
        font_size: 48
        color: (1, 1, 0, 1) # yellow
        text: app.message
